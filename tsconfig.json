{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "allowJs": false,
    "target": "es6",
    "strict": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "noEmit": false,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "webpack.config.js"]
}